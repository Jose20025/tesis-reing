@startuml ModeloConceptualCompleto

title Modelo Conceptual - Sistema Integral de Ventas y Cobranzas

' Entidades del sistema de usuarios
entity Usuario
entity Vendedor
entity Comision

' Entidades del catálogo de productos
entity Producto
entity GrupoProducto
entity MarcaProducto
entity LoteProducto

' Entidades de clientes y ubicación
entity Cliente
entity Zona

' Entidades de almacenes
entity Almacen

' Entidades de ventas
entity Venta
entity DetalleVenta

' Entidades de compras
entity Proveedor
entity Compra
entity DetalleCompra

' Entidades de cobranzas
entity Billetera
entity Cobranza

' ===== RELACIONES CONCEPTUALES =====

' Gestión de usuarios
Usuario "*" -- "1" Vendedor : "opera como"
Vendedor "*" -- "1" Comision : "tiene esquema de"

' Catálogo de productos
Producto "*" -- "1" GrupoProducto : "pertenece a"
Producto "*" -- "1" MarcaProducto : "es de marca"
Producto "1" -- "*" LoteProducto : "se importa en"

' Gestión de clientes
Cliente "*" -- "1" Zona : "reside en"

' Gestión de almacenes
Vendedor "1" -- "*" Almacen : "gestiona"

' Proceso de ventas
Vendedor "1" -- "*" Venta : "registra"
Cliente "1" -- "*" Venta : "realiza"
Venta "1" -- "*" DetalleVenta : "se compone de"
DetalleVenta "*" -- "1" Producto : "incluye"
DetalleVenta "*" -- "1" Almacen : "se despacha desde"
DetalleVenta "*" -- "1" LoteProducto : "utiliza"

' Proceso de compras (abastecimiento)
Vendedor "1" -- "*" Compra : "registra"
Proveedor "1" -- "*" Compra : "suministra"
Compra "1" -- "*" DetalleCompra : "se compone de"
DetalleCompra "*" -- "1" Producto : "incluye"
DetalleCompra "*" -- "1" Almacen : "ingresa a"

' Proceso de cobranzas
Vendedor "1" -- "*" Billetera : "maneja"
Vendedor "1" -- "*" Cobranza : "gestiona"
Venta "1" -- "*" Cobranza : "se cancela mediante"
Billetera "1" -- "*" Cobranza : "registra"

@enduml
